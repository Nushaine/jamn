<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="282dp"
        android:layout_height="52dp"
        android:fontFamily="@font/inter"
        android:text="100% Privately"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/social_media_monochromatic_1"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="39dp"
        android:fontFamily="@font/inter_bold"
        android:text="Write Your Thoughts"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:text="Login"
        app:backgroundTint="#5AC6C6"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="600dp" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:text="Change Account"
        android:textColor="#515151"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="650dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:fontFamily="@font/inter"
        android:background="@color/black"
        android:hint="Password"
        android:textAlignment="center"
        app:backgroundTint="#F2F4F7"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:fontFamily="@font/inter_bold"
        android:text="Current User: JAMN@gmail.com"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="490dp" />

</androidx.constraintlayout.widget.ConstraintLayout>