<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="Create An Account"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="282dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/inter"
        android:text="Enter Your Email"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.026" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailBox"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:fontFamily="@font/inter"
        android:hint="Email"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        app:backgroundTint="#F2F4F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/emailError"
        android:layout_width="342dp"
        android:layout_height="26dp"
        android:layout_marginTop="3dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#FF1100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBox" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="282dp"
        android:layout_height="52dp"
        android:fontFamily="@font/inter"
        android:layout_marginLeft="5dp"
        android:text="Pick A Username"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailError"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/usernameBox2"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/inter"
        android:hint="Username"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        app:backgroundTint="#F2F4F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/usernameError2"
        android:layout_width="346dp"
        android:layout_height="25dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#FF1100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameBox2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="282dp"
        android:layout_height="52dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/inter"
        android:text="Pick A Password"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameError2"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordBox2"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/inter"
        android:hint="Password"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        app:backgroundTint="#F2F4F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/passwordError2"
        android:layout_width="342dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="#FF1100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordBox2" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="346dp"
        android:layout_height="48dp"
        android:layout_marginTop="9dp"
        android:onClick="onClick"
        android:text="Create Account"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="#5AC6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordError2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="177dp"
        android:layout_height="161dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dream_monochromatic_1" />


</LinearLayout>